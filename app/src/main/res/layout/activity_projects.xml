<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.gai.ewbbu.ewb.ui.ProjectsActivity"
                android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/projectsAppBar"
        app:elevation="0dp">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar">
        </include>

    </android.support.design.widget.AppBarLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/projectTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_below="@id/projectsAppBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/CustomTabLayout"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/projectPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/projectTabs"
        />

</RelativeLayout>


