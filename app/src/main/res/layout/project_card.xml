<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/projectImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="example"
                android:src="@drawable/filtration"
                android:scaleType="centerCrop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectTitle"
                android:layout_alignBottom="@+id/projectImage"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:background="#66000000"
                android:textColor="#D9FFFFFF"
                android:textSize="26sp"
                android:text="Water Filtration"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/projectDescription"
                android:layout_below="@+id/projectTitle"
                android:padding="8dp"
                android:text="Our Water Filtration Team piloted a biosandfiltration device that will utilize locally found resources to naturally sanitize contaminated water."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firebaseKey"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
